---

<Base title="News | Rosemary Berkon" description="Recent projects and client updates from Rosemary Berkon, Voice, Accent and Dialect Coach.">
  <section class="max-w-4xl mx-auto px-6 py-16 md:py-20">
    <h1 class="font-heading text-4xl font-bold mb-12">News</h1>

    <div class="space-y-12">
      {articles.map(({ date, title, body, image }) => (
        <article class="flex flex-col md:flex-row gap-6">
          {image && (
            <div class="md:w-1/3 shrink-0">
              <img
                src={image}
                alt={title}
                class="w-full rounded object-cover aspect-[4/3]"
              />
            </div>
          )}
          <div class="flex-1">
            <time class="text-xs text-gray-400 uppercase tracking-wider">{date}</time>
            <h2 class="font-heading text-xl font-bold mt-1 mb-2">{title}</h2>
            {body && <p class="text-gray-600 leading-relaxed text-sm">{body}</p>}
          </div>
        </article>
      ))}
    </div>
  </section>
</Base>
