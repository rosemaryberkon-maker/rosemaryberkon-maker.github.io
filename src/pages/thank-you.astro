import Base from "../layouts/Base.astro";
---

<Base title="Thank You | Rosemary Berkon">
  <section class="max-w-2xl mx-auto px-6 py-24 md:py-32 text-center">
    <h1 class="font-heading text-4xl font-bold mb-4">Thank You!</h1>
    <p class="text-gray-600 text-lg leading-relaxed mb-6">
      Your payment has been received and your place is confirmed. You'll receive a welcome email shortly with everything you need to get started.
    </p>
    <p class="text-gray-500 mb-10">
      If you have any questions in the meantime, don't hesitate to get in touch at
      <a href="mailto:rosemary.berkon@gmail.com" class="text-teal underline">rosemary.berkon@gmail.com</a>
    </p>
    <a
      href="/"
      class="inline-block bg-teal text-white font-medium px-8 py-3 text-sm tracking-wide hover:bg-teal-dark transition-colors"
    >
      Back to Home
    </a>
  </section>
</Base>
