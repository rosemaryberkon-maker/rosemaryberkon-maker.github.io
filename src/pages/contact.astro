---
import Base from "../layouts/Base.astro";
---

<Base title="Contact | Rosemary Berkon" description="Get in touch with Rosemary Berkon or book a session.">
  <!-- Page Header -->
  <div class="page-header">
    <h1>Get in Touch</h1>
    <p>Send Rosemary a message or book a session directly</p>
  </div>

  <section class="max-w-5xl mx-auto px-6 py-16 md:py-20">
    <div class="grid md:grid-cols-2 gap-12 md:gap-16">
      <!-- Form -->
      <div data-animate="fade-up">
        <h2 class="font-heading text-2xl font-bold text-ink mb-6">Send a Message</h2>
        <form action="https://formspree.io/f/xreadwvk" method="POST" class="space-y-5">
          <div>
            <label for="name" class="block text-sm font-medium text-ink mb-1.5">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full border border-stone bg-white px-4 py-3 text-sm text-ink focus:outline-none focus:border-gold focus:ring-1 focus:ring-gold/30 transition-colors rounded"
            />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-ink mb-1.5">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full border border-stone bg-white px-4 py-3 text-sm text-ink focus:outline-none focus:border-gold focus:ring-1 focus:ring-gold/30 transition-colors rounded"
            />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-ink mb-1.5">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full border border-stone bg-white px-4 py-3 text-sm text-ink focus:outline-none focus:border-gold focus:ring-1 focus:ring-gold/30 transition-colors resize-vertical rounded"
            ></textarea>
          </div>
          <div class="flex items-start gap-3">
            <input
              type="checkbox"
              id="newsletter"
              name="newsletter"
              value="yes"
              class="mt-0.5 w-4 h-4 border-stone text-gold focus:ring-gold accent-gold"
            />
            <label for="newsletter" class="text-sm text-body">I'd like to receive occasional updates and news from Rosemary.</label>
          </div>
          <button
            type="submit"
            class="inline-block bg-gold text-ink font-medium px-8 py-3 text-sm tracking-wide hover:bg-gold-light transition-colors rounded"
          >
            Send Message
          </button>
        </form>
      </div>

      <!-- Info + Booking -->
      <div data-animate="fade-up" data-delay="200">
        <h2 class="font-heading text-2xl font-bold text-ink mb-6">Contact Information</h2>
        <div class="space-y-4 mb-10">
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
            <div>
              <p class="text-sm font-medium text-ink">Email</p>
              <a href="mailto:rosemary.berkon@gmail.com" class="text-sm text-gold hover:text-gold-light transition-colors">rosemary.berkon@gmail.com</a>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
            <div>
              <p class="text-sm font-medium text-ink">Location</p>
              <p class="text-sm text-body">Liverpool, UK</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-gold shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>
            <div>
              <p class="text-sm font-medium text-ink">Sessions</p>
              <p class="text-sm text-body">Online via Zoom</p>
            </div>
          </div>
        </div>

        <div class="border-t border-stone pt-8">
          <h3 class="font-heading text-xl font-bold text-ink mb-2">Book a Session</h3>
          <p class="text-sm text-body mb-4">Schedule a 15-minute introductory call with Rosemary.</p>
          <a
            href="https://calendly.com/rosemary-berkon/30min"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block border border-gold text-gold font-medium px-6 py-3 text-sm tracking-wide hover:bg-gold hover:text-ink transition-colors rounded"
          >
            Book via Calendly
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Calendly embed -->
  <section class="bg-stone">
    <div class="max-w-3xl mx-auto px-6 py-16 md:py-20">
      <h2 class="font-heading text-2xl font-bold text-ink mb-4 text-center" data-animate="fade-up">Schedule a Call</h2>
      <p class="text-body mb-10 text-center text-sm" data-animate="fade-up" data-delay="100">Choose a time that works for you.</p>
      <div class="calendly-inline-widget" data-url="https://calendly.com/rosemary-berkon/30min?hide_gdpr_banner=1" style="min-width:280px;height:1000px;overflow:hidden;"></div>
      <script is:inline src="https://assets.calendly.com/assets/external/widget.js" async></script>
    </div>
  </section>
</Base>
