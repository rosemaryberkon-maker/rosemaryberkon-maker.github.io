---
interface Props {
  currentPath: string;
}

const { currentPath } = Astro.props;

const links = [
  { href: "/", label: "Home" },
  { href: "/about/", label: "About Me" },
  { href: "/accent-training/", label: "Accent Training" },
  { href: "/news/", label: "News" },
  { href: "/contact/", label: "Contact" },
];
---

<header id="site-header" class="sticky top-0 z-50 bg-ink/95 backdrop-blur-sm border-b border-white/5 transition-shadow duration-300">
  <nav class="max-w-5xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href="/" class="block">
      <img src="/images/logo-wordmark-nav.svg" alt="Rosemary Berkon" class="h-5 md:h-6 w-auto" />
    </a>

    <button
      id="mobile-menu-btn"
      class="md:hidden p-2 text-cream/70"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path class="menu-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        <path class="menu-close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <ul id="nav-links" class="hidden md:flex items-center gap-8">
      {links.map(({ href, label }) => (
        <li>
          <a
            href={href}
            class:list={[
              "text-sm tracking-wide transition-colors",
              currentPath === href
                ? "text-gold font-medium"
                : "text-cream/70 hover:text-gold-light",
            ]}
          >
            {label}
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <ul id="mobile-nav" class="hidden md:hidden px-6 pb-4 space-y-3 border-t border-white/5">
    {links.map(({ href, label }) => (
      <li class:list={[links.indexOf({ href, label }) === 0 ? "pt-4" : ""]}>
        <a
          href={href}
          class:list={[
            "block text-sm tracking-wide",
            currentPath === href
              ? "text-gold font-medium"
              : "text-cream/70",
          ]}
        >
          {label}
        </a>
      </li>
    ))}
  </ul>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-nav");
  const openIcon = btn?.querySelector(".menu-open");
  const closeIcon = btn?.querySelector(".menu-close");

  btn?.addEventListener("click", () => {
    const expanded = btn.getAttribute("aria-expanded") === "true";
    btn.setAttribute("aria-expanded", String(!expanded));
    menu?.classList.toggle("hidden");
    openIcon?.classList.toggle("hidden");
    closeIcon?.classList.toggle("hidden");
  });

  const header = document.getElementById("site-header");
  let lastScroll = 0;
  window.addEventListener("scroll", () => {
    const scrolled = window.scrollY > 20;
    header?.classList.toggle("shadow-lg", scrolled);
    header?.classList.toggle("shadow-gold/5", scrolled);
    lastScroll = window.scrollY;
  }, { passive: true });
</script>
